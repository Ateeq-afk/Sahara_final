# Copy this to .env.local and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/sahara-developers

# NextAuth
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Email (Resend)
RESEND_API_KEY=re_xxxx

# AWS S3 Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-iam-access-key
AWS_SECRET_ACCESS_KEY=your-iam-secret-key
AWS_S3_BUCKET_NAME=sahara-developers

# Optional: CloudFront CDN
CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Public S3 URL for images
NEXT_PUBLIC_S3_IMAGE_URL=https://sahara-developers.s3.ap-south-1.amazonaws.com

# Rate Limiting (Upstash Redis) - Optional for local dev
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Error Monitoring (Sentry) - Optional
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=